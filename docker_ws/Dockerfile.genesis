FROM pytorch/pytorch:2.5.1-cuda12.1-cudnn9-runtime

# Librerie runtime essenziali per rendering/headless
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgl1 libegl1 libvulkan1 mesa-vulkan-drivers libglib2.0-0 ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# PyTorch è già presente: installo Genesis
RUN pip install --no-cache-dir --upgrade pip wheel \
 && pip install --no-cache-dir genesis-world

WORKDIR /root/genesis_workspace
